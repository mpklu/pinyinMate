{
  "name": "pinyinmate-lesson-builder",
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VITE_APP_NAME": "PinyinMate Lesson Builder",
    "VITE_MAX_CONTENT_LENGTH": "10000",
    "VITE_MAX_VOCABULARY_SUGGESTIONS": "20"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  }
}